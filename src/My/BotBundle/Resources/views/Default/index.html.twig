{% extends 'MyBotBundle::layout.html.twig' %}


{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('frontend/auctions.js') }}"></script>
{% endblock %}


{% block auctions %}
	<div class="container-fluid marginTop">

		<div class="row-fluid">
			<div class="span12">
				<h3>Actions</h3>
			</div>
		</div>

		
		<!-- ko foreach: auctions --> 
		<div class="row-fluid">
			<div class="span12">
				<p class="borderDashed">&nbsp;</p>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span4">
				<p>
					<em>[<span data-bind="text: auctionId"></span>]</em>
					<strong><span data-bind="text: status"></span></strong>
				</p>
				<p>
					<em>[<span data-bind="text: productId"></span>]</em>
					<strong><span data-bind="text: productName"></span></strong>
				</p>
				<p>Been on <em data-bind="text: auctionCount"></em> auctions.</p>
			</div>
			<div class="span3">
				<h3 data-bind="text: endAt"></h3>
				<p>
					<strong><span data-bind="text: price"></strong>
					<em><span data-bind="text: userName"></span></em>
				</p>
			</div>
			<div class="span3">
				<p>
					Cost <span data-bind="text: productRetail"></span> retail
					<br>Increase <span data-bind="text: step"></span> per bid
					<br>Exp avg price of <span data-bind="text: avgPrice"></span> &plusmn; <span data-bind="text: stdDev"></span>
				</p>
			</div>
			<div class="span2">
				<h6>
					Start at: <span data-bind="text: startAt"></span>
					<br>Remaning: <span data-bind="text: bidsRemaining"></span>
					<br>ETA: <span data-bind="text: (Math.round(bidsRemaining / 60))"></span> min
				</h6>
				<p data-bind="visible: status == 'Open'"><a data-bind="attr: {href: '/direct/auction/' + auctionId}">Direct</a></p>
			</div>
		</div>
		<!-- /ko -->
		


		{% if (app.debug) %}
		<div class="row-fluid">
			<div class="span12">
				<h5>Debug:</h5>
				<p>auctions: <span data-bind="text: ko.toJSON(auctions)"></span></p>
				<p>lag: <span data-bind="text: ko.toJSON(lag)"></span></p>
			</div>
		</div>
		{% endif %}

	</div>
{% endblock %}

